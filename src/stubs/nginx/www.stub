#
# YOLO Virtual Host configuration
#

{FORWARD_NON_WWW}

server {
    # listen on 80 (behind load balancer)
    listen 80 default_server;
    listen [::]:80 default_server;

    # do not reveal nginx version info
    server_tokens off;

    # redirect if not on a https connection
    if ($http_x_forwarded_proto = "http") {
        return 301 https://$host$request_uri;
    }

    # get real IP from trusted proxy (AWS ELB)
    real_ip_header X-Forwarded-For;
    set_real_ip_from 10.0.0.0/8;

    # max filesize
    client_max_body_size 128M;

    server_name _;

    root /var/www/{NAME}/public;

    index index.php;

    charset utf-8;

    access_log /var/log/nginx/access.log enhanced;

    # disable logging on favicon
    location = /favicon.ico {
        access_log off;
        log_not_found off;
    }

    # disable logging on robots.txt, forward requests to php-fpm
    location = /robots.txt  {
        access_log off;
        log_not_found off;
        try_files $uri /index.php?$query_string;
    }

    location / {
        # CORS for accepting external fonts
        location ~* \.(eot|ttf|woff|woff2)$ {
            add_header Access-Control-Allow-Origin *;
        }

        # First attempt to serve request as file, then
        # as directory, then fall back to displaying a 404.
        try_files $uri $uri/ /index.php?$query_string;
    }

    # pass the PHP scripts to FastCGI server
    location ~ \.php$ {
        include snippets/fastcgi-php.conf;

        # increase buffer sizes
        fastcgi_buffers 16 16k;
        fastcgi_buffer_size 32k;

        # With php8.3-fpm:
        fastcgi_pass unix:/run/php/php8.3-fpm.sock;
    }
}
